#First Problem (970)
class Solution(object):
    def powerfulIntegers(self, x, y, bound):
        powerful_numbers = set()
    
        i = 0
        while x**i <= bound:
            j = 0
            while x**i + y**j <= bound:
                powerful_numbers.add(x**i + y**j)
                if y == 1:  
                    break
                j += 1
            if x == 1: 
                break
            i += 1
        
        return list(powerful_numbers)




