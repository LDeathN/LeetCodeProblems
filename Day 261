#First Problem 1551
class Solution(object):
    def minOperations(self, n):
        if n % 2 == 0:
            m = n // 2
            return m * m
        else:
            m = n // 2
            return m * (m + 1)



#Second Problem 1552
class Solution(object):
    def maxDistance(self, position, m):
        position.sort()
    
        def canPlaceBalls(force):
            count = 1  
            last_position = position[0]
            
            for pos in position:
                if pos - last_position >= force:
                    count += 1
                    last_position = pos
                    if count == m:
                        return True
            return False
        
        low, high = 1, position[-1] - position[0]
        answer = 0
        
        while low <= high:
            mid = (low + high) // 2
            if canPlaceBalls(mid):
                answer = mid  
                low = mid + 1  
            else:
                high = mid - 1  
        
        return answer



#Third Problem 1557
class Solution(object):
    def findSmallestSetOfVertices(self, n, edges):
        in_degree = [0] * n
        for from_node, to_node in edges:
            in_degree[to_node] += 1
        
        result = [node for node in range(n) if in_degree[node] == 0]
        
        return result



#Fourth Problem 1558
class Solution(object):
    def minOperations(self, nums):
        total_increments = 0
        max_doublings = 0
        
        for num in nums:
            doublings = 0
            while num > 0:
                if num % 2 == 1:  
                    num -= 1
                    total_increments += 1
                else:  
                    num //= 2
                    doublings += 1
            max_doublings = max(max_doublings, doublings)
        
        return total_increments + max_doublings




